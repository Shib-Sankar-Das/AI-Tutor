{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "50mb" }
    },
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/chat",
      "dest": "/api/index.py"
    },
    {
      "src": "/api/tts",
      "dest": "/api/index.py"
    },
    {
      "src": "/api/ingest",
      "dest": "/api/index.py"
    },
    {
      "src": "/api/memory/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/api/health",
      "dest": "/api/index.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "functions": {
    "api/**/*.py": {
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "env": {
    "PYTHONUNBUFFERED": "1"
  }
}
