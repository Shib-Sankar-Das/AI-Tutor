{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/chat",
      "destination": "/api/index.py"
    },
    {
      "source": "/api/tts",
      "destination": "/api/index.py"
    },
    {
      "source": "/api/ingest",
      "destination": "/api/index.py"
    },
    {
      "source": "/api/memory/:path*",
      "destination": "/api/index.py"
    },
    {
      "source": "/api/health",
      "destination": "/api/index.py"
    }
  ],
  "functions": {
    "api/index.py": {
      "maxDuration": 60,
      "memory": 1024
    }
  }
}
